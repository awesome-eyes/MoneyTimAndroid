<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="251dp"
        android:layout_height="578dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvUserList"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="207dp" />

        <Button
            android:id="@+id/btnGetExpenses"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/amatica_sc_bold"
            android:text="Expenses"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="60px"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="407dp" />

        <Button
            android:id="@+id/btnGetExpenses2"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="?android:attr/colorActivatedHighlight"
            android:fontFamily="@font/amatica_sc_bold"
            android:text="Categories of expenses"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="60px"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="407dp" />

        <Button
            android:id="@+id/btnGetUsers"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:background="?android:attr/textColorLinkInverse"
            android:fontFamily="@font/amatica_sc_bold"
            android:text="Locations"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="60px"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="447dp" />

        <TextView
            android:id="@+id/tvUserList2"
            android:layout_width="match_parent"
            android:layout_height="177dp"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="207dp" />

        <Button
            android:id="@+id/btnGetUsers2"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="Settings"
            android:background="@android:color/holo_green_dark"
            android:fontFamily="@font/amatica_sc_bold"
            android:textSize="60px"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="447dp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>